# PostgreSQL (same as OHLC Handler)
# When alerts run in Docker and Postgres is on the host (e.g. OHLC stack): use host.docker.internal
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ohlc
DB_USER=postgres
DB_PASSWORD=

# OHLC Handler API (trigger updates when data missing/stale)
# When alerts run in Docker and OHLC is on the host: use http://host.docker.internal:8000
OHLC_API_BASE_URL=http://localhost:8000

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Optional (check more often for faster alerts; default 300 = 5 min)
# CHECK_INTERVAL=300
# HOURLY_CHECK_INTERVAL=300
# RETRY_INTERVAL=30
# STALE_DATA_SECONDS=7200
